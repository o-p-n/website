{
  "imports": {
    "@date-fns/utc": "npm:@date-fns/utc@^2.1.1",
    "date-fns": "npm:date-fns@^4.1.0",
    "lume/": "https://deno.land/x/lume@v3.0.11/",
    "markdown-it-callouts": "npm:markdown-it-callouts@^1.1.0",
    "markdown-it-footnote": "npm:markdown-it-footnote@^4.0.0"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "unstable": ["temporal"]
}
